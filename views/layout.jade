  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/blockchain-demo/") Blockchain Visualized
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(class={active: !page})
              a(href='/blockchain-demo/') Hash
            li(class={active: page === 'block'})
              a(href='/blockchain-demo/block') Block
            li(class={active: page === 'blockchain'})
              a(href='/blockchain-demo/blockchain') Blockchain
            li(class={active: page === 'distributed'})
              a(href='/blockchain-demo/distributed') Distributed
            li(class={active: page === 'coinbase'})
              a(href='/blockchain-demo/coinbase') NuCoin

